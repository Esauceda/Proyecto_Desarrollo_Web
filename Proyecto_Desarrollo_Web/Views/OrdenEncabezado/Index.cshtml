@using Proyecto_Desarrollo_Web.Models.ViewModel;
@model List<OrdenEncabezadoVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ordenes</h1>

<form asp-action="Insertar" method="get">
    <div class="row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <p>@TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Agregar" class="btn-success">
    </div>
    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table class="table table-bordered table-striped">
                <tread>
                    <tr>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </tread>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cliente.Nombre</td>
                            <td>@item.Fecha</td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", "OrdenEncabezado", new {@OrdenEncabezadoId = item.OrdenEncabezadoId}, new{@class = "btn btn-info"})
                                @Html.ActionLink("Eliminar", "Eliminar", "OrdenEncabezado", new {@OrdenEncabezadoId = item.OrdenEncabezadoId}, new{@class = "btn btn-info"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</form>

