@using Proyecto_Desarrollo_Web.Models.ViewModel;

@model List<ModulosRolesVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Tablas.css" />
</head>
<h1>Modulos Roles</h1>

<form asp-action="Insertar" method="get">
    <div class="row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <p>@TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

        </div>
    </div>


    <div class="form-group">
        <input type="submit" value="Agregar" class="btn-success">
    </div>

    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table class="table table-bordered table-striped my-table">
                <thead>
                    <tr>
                        <th>Modulo</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Modulo.Nombre</td>
                            <td>@item.Rol.Descripcion</td>
                            <td>
                                @Html.ActionLink("Editar","Editar","ModuloRoles", new{@Id = item.Id}, new {@class = "btn btn-outline-primary"})
                                @Html.ActionLink("Eliminar","Eliminar","ModuloRoles", new{@Id = item.Id}, new {@class = "btn btn-outline-danger"})
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
</form>