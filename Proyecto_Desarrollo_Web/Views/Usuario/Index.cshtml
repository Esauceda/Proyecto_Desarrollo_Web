@using Proyecto_Desarrollo_Web.Models.ViewModel;

@model List<UsuarioVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/Tablas.css" />
</head>
<h1>Usuario</h1>
<form asp-action="Insertar" method="get">
    <div class="row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <p>@TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Agregar" class="btn-success">
    </div>

    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table class="table table-bordered table-striped my-table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Telefono</th>
                        <th>DNI</th>
                        <th>Direccion</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Username</td>
                            <td>@item.Nombre</td>
                            <td>@item.Correo</td>
                            <td>@item.Telefono</td>
                            <td>@item.DNI</td>
                            <td>@item.Direccion</td>
                            <td>@Html.ActionLink("Editar","Editar","Usuario", new{@UsuarioId = item.UsuarioId}, new {@class = "btn btn-info"})
                                @Html.ActionLink("Eliminar","Eliminar","Usuario", new{@UsuarioId = item.UsuarioId}, new {@class = "btn btn-danger"})
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
</form>

