@using Proyecto_Desarrollo_Web.Models.ViewModel;
@model RolVm
@{
    ViewData["Title"] = "Insertar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <h1>Insertar</h1>

    <div>
        <form method="post" asp-action="Insertar">
            <div>
                <div>
                    @if (TempData["mensaje"] != null)
                    {
                        <div role="alert">
                            <p>
                                @TempData["mensaje"]
                            </p>
                            <button type="button" data-dismiss="alert" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                </div>
            </div>
            <div>
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion">
                <span asp-validation-for="Descripcion"></span>
            </div>
            <div>
                <label asp-for="Descripcion2"></label>
                <input asp-for="Descripcion2">
                <span asp-validation-for="Descripcion2"></span>
            </div>
            <div>
                <input type="submit" value="Insertar">
            </div>
        </form>
    </div>
</div>
