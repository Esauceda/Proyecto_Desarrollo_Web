@using Proyecto_Desarrollo_Web.Models.ViewModel;
@model List<ClienteVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Tablas.css" />
</head>
<h1>Index</h1>

<form asp-action="Insertar" method="get">
    <div class="row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <p>@TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Agregar" class="btn-success">
    </div>
    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table class="table table-bordered table-striped">
                <tread>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Telefono</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </tr>
                </tread>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.Telefono</td>
                            <td>@item.Correo</td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Cliente", new {@ClienteId = item.ClienteId}, new{@class = "btn btn-info"})
                                @Html.ActionLink("Eliminar", "Eliminar", "Cliente", new {@ClienteId = item.ClienteId}, new{@class = "btn btn-danger"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</form>
