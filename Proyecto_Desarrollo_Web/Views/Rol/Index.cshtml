@using Proyecto_Desarrollo_Web.Models.ViewModel;
@model List<RolVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<form asp-action="Buscar" method="get">
    <div>
        <div>
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <p>
                        @TempData["mensaje"]
                    </p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
    </div>

    <div>
        <input type="submit" value="buscar">
    </div>
</form>
<form asp-action="Insertar" method="get">
    <div>
        <div>
            @if (TempData["mensaje"] != null)
            {
                <div role="alert">
                    <p>
                        @TempData["mensaje"]
                    </p>
                    <button type="button" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
    </div>

    <div>
        <input type="submit" value="agregar">
    </div>
    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table>
                <tread>
                    <tr>
                        <th>Descripcion</th>
                        <th>Descripcion2</th>
                        <th>Acciones</th>
                    </tr>
                </tread>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Descripcion</td>
                            @*<td>@item.Usuario.Nombre</td>*@
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Rol", new {@Id = item.Id}, new{@class = "btn btn-info"})
                                @Html.ActionLink("Eliminar", "Eliminar", "Rol", new {@Id = item.Id}, new{@class = "btn btn-info"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</form>

