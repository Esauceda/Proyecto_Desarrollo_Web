@using Proyecto_Desarrollo_Web.Models.ViewModel;

@model List<ModulosRolesVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<form asp-action="Insertar" method="get">
    <div class="row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <p>@TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

        </div>
    </div>


    <div class="form-group">
        @*@<td>@Html.ActionLink("Buscar","Buscar","Modulo", new {@class = "btn btn-info"})</td>*@
        <input type="submit" value="Agregar" class="btn-success">
    </div>

    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th></th>
                        <th>RolId</th>
                        <th>ModuloId</th>
                        <th>Eliminado</th>
                        <th>CreateBy</th>
                        <th>CreatedDate</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Modulo.Metodo</td>
                            <td>@item.Rol.Descripcion</td>
                            <td>@item.Eliminado</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.CreatedDate</td>
                            <td>@Html.ActionLink("Editar","Editar","Modulo", new{@ModuloID = item.Id}, new {@class = "btn btn-info"})</td>
                            <td>@Html.ActionLink("Eliminar","Eliminar","Modulo", new{@ModuloID = item.Id}, new {@class = "btn btn-info"})</td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
</form>